<Window x:Class="Injec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Injec"
        mc:Ignorable="d"
        Title="Injec" Height="450" Width="800"
        x:Name="MainWindowInjec"
        Style="{StaticResource MaterialDesignWindow}" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Margin="5,0,2.5,0" VerticalAlignment="Top">
            <DataGrid x:Name="ProcessDataGrid" Height="287" Margin="0,5,0,0"/>

            <TextBox x:Name="SearchProcessTextBox"
                     materialDesign:HintAssist.Hint="Process name or PID"
                     Style="{StaticResource  MaterialDesignFloatingHintTextBox}" TextChanged="SearchProcessTextBox_TextChanged"/>

            <Button x:Name="SelectProcessButton" 
                    Content="Select" Margin="0,5,0,0" Click="SelectProcessButton_Click"/>

            <Button x:Name="RefreshProcessButton" 
                    Content="Refresh" Margin="0,5,0,0" Click="RefreshProcessButton_Click"/>
        </StackPanel>
        

        <StackPanel Grid.Column="1" Margin="2.5,0,5,0">
            <TextBlock x:Name="CurrentModuleInfoTextBox"
                 Style="{DynamicResource MaterialDesignButtonTextBlock}"
                 Height="320"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Margin="0,5,0,0"/>

            <Button x:Name="ListModulesForCurrentProcessButton"
                    Content="Modules"
                    HorizontalAlignment="Right"
                    Width="150" Margin="0,5,0,0" Click="ListModulesForCurrentProcessButton_Click"/>

            <Button x:Name="ClearCurrentInfoButton"
                    Content="Clear"
                    HorizontalAlignment="Right"
                    Width="150" Click="ClearCurrentInfoButton_Click" Margin="0,5,0,0"/>

        </StackPanel>
    </Grid>
</Window>
