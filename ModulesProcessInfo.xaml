<Window x:Class="Injec.ModulesProcessInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Injec"
        mc:Ignorable="d"
        Title="ModulesProcessInfo" Height="450" Width="800"
        Style="{StaticResource MaterialDesignWindow}" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5,5,5,0">
            <DataGrid x:Name="ModulesDataGrid" Height="325"/>
            
            <TextBox x:Name="SearchModuleTextBox"
                     materialDesign:HintAssist.Hint="Module name"
                     Style="{StaticResource  MaterialDesignFloatingHintTextBox}" TextChanged="SearchProcessTextBox_TextChanged"/>

            <Button x:Name="RefreshModullesButton" 
                    Content="Refresh" Margin="0,5,0,0" Click="RefreshModullesButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
